<table border="1">
  <% if @seasons.length > 1 %>
  <tr>
    <th>Seasons:</th>
    <% @seasons.each do |s|%>
      <th colspan="<%=@count%>"><%=s.name%></th>
    <% end %>
  </tr>
  <% end %>
  <tr>
    <th>Name</th>
    <% @seasons.each do |s|%>
      <% if @option.variable_rates %>
	<th>Sun</th><th>Mon</th><th>Tue</th><th>Wed</th><th>Thu</th><th>Fri</th><th>Sat</th>
      <% else %>
	<th>Daily</th>
      <% end %>
      <th>Weekly</th> <th>Monthly</th>
      <% if @seasonal %>
	<th>Seasonal</th>
      <% end %>
      <% if @storage %>
	<th>Monthly<br \>Storage</th>
      <% end %>
    <% end %>
  </tr>
  <%= all_rates %>
</table>
