<% unless @remote %>
  <% unless @reservation.editable? %>
    <%= I18n.t('reservation.Notes') %>: <b><%= @reservation.special_request %></b><br />
    <b><%= @reason %></b>
  <% else %>
    <%= I18n.t('reservation.Notes') %>: <b><%= in_place_editor_field_prompted :reservation, :special_request %></b>
  <% end %>
  <%= I18n.t('reservation.ArrivalTime') %>: <%= arrival_time(@reservation.arrival_time) %>
<% end %>